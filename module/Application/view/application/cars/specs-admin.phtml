<table class="table table-stripped">
    <thead>
        <tr>
            <th><?=$this->escapeHtml($this->translate('specifications-editor/admin/date'))?></th>
            <th><?=$this->escapeHtml($this->translate('specifications-editor/admin/user'))?></th>
            <th><?=$this->escapeHtml($this->translate('specifications-editor/admin/parameter'))?></th>
