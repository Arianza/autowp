            <th></th>
        </tr>
    </thead>
    <tbody>
        <?php foreach ($this->values as $value) { ?>
            <tr>
                <td><?=$this->escapeHtml($this->humanTime($value['date']))?></td>
                <td>
                    <?php if ($value['user']) { ?>
                        <?=$this->user($value['user'])?>
                    <?php } ?>
                </td>
                <td>
                    <?php if ($value['attribute']) {
                        echo $this->escapeHtml($value['attribute']['name']);
                        if ($value['unit']) {
                            echo ', ' . $this->escapeHtml($value['unit']['name']);
                        }
                    } ?>
                </td>
                <td>
                    <?=$this->escapeHtml($value['userValue'])?>
                    /
                    <?=$this->escapeHtml($value['value'])?>
                </td>
                <td>
                    <form action="<?=$this->escapeHtmlAttr($value['deleteUrl'])?>" method="post">
                        <button type="submit" class="btn btn-danger btn-xs">
                            <i class="fa fa-times"></i>
                        </button>
                    </form>
                </td>
            </tr>
        <?php } ?>
    </tbody>
