<?php
    $lastType = null;
?>
<?php foreach ($this->cars as $car) { ?>
    <?php if ($lastType != $car['type']) { ?>
        <?php
            $lastType = $car['type'];
        ?>
        <div class="text-muted">
            <?php
                switch ($car['type']) {
                    case Application\Model\ItemParent::TYPE_TUNING: print $this->escapeHtml($this->translate('catalogue/related')); break;
                    case Application\Model\ItemParent::TYPE_SPORT:  print 'Sport'; break;
                }
            ?>
        </div>
    <?php } ?>
    <?php if ($car['haveChilds']) { ?>
        <div>
            <?=$this->htmlA([
                'href'      => '#',
                'class'     => 'arrow',
                'data-load' => $car['loadUrl']
            ], '<i class="fa fa-plus-circle"></i> ' . $this->car()->htmlTitle($car), false) ?>
            <div style="margin:0 0 4px 18px;display:none">
                <?php if (!$car['isGroup']) { ?>
                    <?=$this->htmlA($car['url'], $this->car()->htmlTitle($car), false) ?><br />
                <?php } ?>
                <div class="loading"><em>Loading ...</em></div>
                <?php if ($car['isGroup']) { ?>
                    <?=$this->htmlA($car['url'], $this->translate('upload/select/other-modification')) ?>
                <?php } ?>
            </div>
        </div>
    <?php } else { ?>
        <?=$this->htmlA($car['url'], $this->car()->htmlTitle($car), false) ?><br />
    <?php } ?>
<?php } ?>